<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="/public/css/admin.css" rel="stylesheet" />
    <style>
        @font-face {
            font-family: baton;
            src: url(/public/fonts/Baton-Sans.otf);
        }

        @font-face {
            font-family: obitron;
            src: url(/public/fonts/Orbitron-VariableFont_wght.ttf);
        }


        body {
            font-family: baton;
            letter-spacing: 2px;
            text-transform: none;

        }

        table {
            font-family: obitron;
        }

        td {
            font-family: obitron;
        }

        tr {
            font-family: obitron;
        }

        thead {
            font-family: obitron;
        }

        tbody {
            font-family: obitron;
        }

        form{
          font-family: obitron;
        }
    </style>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body>


    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="#"><img src="/public/img/logo.png" alt="" height="30px" width="200px"></a>
            <button class="navbar-toggler navbar-light" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                <div class="navbar-nav d-flex justify-content-center " style="text-transform: uppercase;">
                    <a class="nav-link active  text-black" href="/admin/dashboard">Dashboard</a>



                    <a class="nav-link text-black" href="/admin/products">Products</a>

                    <a class="nav-link text-black" href="/admin/category">Categories</a>

                    <a class="nav-link text-black" href="/admin/order">Orders</a>

                    <a class="nav-link text-black" href="/admin/coupon">Coupons</a>

                    <a class="nav-link text-black" href="/admin/customer">Customers</a>

                    <a class="nav-link text-danger" href="/admin/logout">Logout</a>

                </div>
            </div>
        </div>
    </nav>


    
<div class="container mx-auto row">
  <div class="col-lg-6 mx-auto mb-4 px-2">

    
    <h3 class="fw-bold text-center my-3">ADD Product</h3>
      <p class="text-danger mt-0">
        <%= locals.error %>
      </p>
      <p class="text-success mt-0">
        <%= locals.message %>
      </p>
      <form action="" method="post" enctype="multipart/form-data">
        <!-- userName -->
        <div class="form-outline">

          <label class="form-label" for="userName">Product Name</label>
          <input type="text" id="name" name="name" class="form-control" required />
          
        </div>

        <!-- Email input -->
        <div class="form-outline">
          <label for="file-upload" class="form-label">Images to upload</label>
          <input class="form-control" type="file" name="image" accept="image/png, image/gif, image/jpeg, image/svg, image/webp">

        </div>

        <div class="form-outline">

          <label class="form-label" for="modelno">Model</label>
          <input type="text" id="name" name="model" class="form-control" required />
          
        </div>

        <div class="form-outline">

          <label class="form-label" for="category">Category</label>


          <select id="inputState" class="form-control" name="category">
            <option selected>Choose category</option>
            <%categories.forEach((data)=>{%>
              <option value="<%=data._id%>">
                <%=data.name%>
              </option>
              <%})%>
          </select>


          
        </div>

        <div class="form-outline">

          <label class="form-label" for="description">Color</label>
          <input type="text" id="color" name="color" class="form-control" required />
        </div>

        <div class="form-outline">

          <label class="form-label" for="category">Price</label>
          <input type="text" id="price" name="price" class="form-control" required />
        </div>

        <div class="form-outline">

          <label class="form-label" for="stock">Stock</label>
          <input type="number" id="stock" name="stock" class="form-control" required />
          
        </div>

        <div class="form-outline">

          <label class="form-label" for="stock">Description</label>
          <input type="text" id="stock" name="description" class="form-control" required />
          
        </div>

        <p id="emailError" class="text-danger mt-3"></p>

        <!-- Password input -->

        <!-- Submit button -->
        <input type="submit" value="Upload" class="btn upload-btn btn-primary btn-lg btn-block mb-4 py-1" />
      </form>

  </div>

</div>




    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>


    <script src="/public/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="/public/js/datatables-simple-demo.js"></script>
</body>

</html>