<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="/public/css/admin.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="container-fluid">
    
        <div class="row">
            <div class="col-lg-3 d-flex justify-content-center border-end">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/category">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/order">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupon">Coupons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/customer">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/admin/logout">Logout</a>
                    </li>
                </ul>
            </div>

            <div class="col-lg-9 ">
                <div class="col-lg-12">
                    <h2>Products</h2>
                    <span>
                        <a href="/admin/add-product"><button class="btn btn-success">Add Product</button></a>
                    </span>

                    <!-- ------------------Seach form------------------>
                    <form class="text-center">

                        <input type="text" name="search" id="" class="form-control my-2"
                            placeholder="Enter Product name or category">

                        <button class="btn btn-info" value="search">Search</button>
                        <a href="/admin/products"><button class="btn btn-dark">Show All</button></a>
                    </form>
                </div>
                <!-- ------------------From ends----------------------->


                <div class="col-lg-12 d-flex justify-content-center">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            DataTable Example
                        </div>
                        <div class="card-body">
                            <% if(details !=null) { %>
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th> Product Name</th>
                                            <th>Image</th>
                                            <th>Model</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Color</th>
                                            <th>Stock</th>
                                            <th>Price</th>
                                            <th>Status</th>
                                            
                                            
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Office</th>
                                            <th>Age</th>
                                            <th>Start date</th>
                                            <th>Salary</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% details.forEach(function(item){ %>
                                            <tr>
                                                <td>
                                                    <%= item.name %>
                                                </td>
                                                <td>
                                                    <img class="img-thumbnail"
                                                        src="/public/databaseimg/<%= item.image%>" alt="" srcset=""
                                                        height="200px" width="150px">
                                                </td>

                                                <td>
                                                    <%= item.model%>
                                                </td>

                                                <td>
                                                    <% for(var i=0; i<value.length ;i++){%>
                                                        <% if(value[i]._id==item.category){ %>
                                                            <%=value[i].name%>
                                                                <% } %>
                                                                    <%}%>
                                                </td>

                                                <td>
                                                    <%= item.description %>
                                                </td>
                                                <td>
                                                    <%= item.color %>
                                                </td>

                                                <td>
                                                    <%= item.stock %>
                                                </td>

                                                <td>
                                                    <%= item.price%>
                                                </td>

                                                <td>
                                                    <% if (item.status==true) { %>
                                                        <%= locals.stat %>
                                                            <%} else { %>
                                                                <%= locals.unStat %>
                                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/delete-product/?id=<%= item._id%>"
                                                        onclick="return confirm('Are you sure?')">
                                                        Delete
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/admin/<% if (item.status==true) { %><%= locals.blockRef %><%} else { %><%= locals.unblockRef %><% } %>/?id=<%= item._id%>"
                                                        onclick="return confirm('Are you sure?')">
                                                        <% if (item.status==true) { %>
                                                            <%= locals.blocking %>
                                                                <%} else { %>
                                                                    <%= locals.unBlock %>
                                                                        <% } %>
                                                    </a>
                                                </td>
                                                <td>

                                                    <a href="/admin/edit-product/?id=<%= item._id%>">
                                                        Edit
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>

                                </table>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>


    <script src="/public/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="/public/js/datatables-simple-demo.js"></script>
</body>

</html>