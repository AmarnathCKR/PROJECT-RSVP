<%- include('../partials/adminHeader') %>

    <div class="d-flex justify-content-between p-3">
        <h2 class="py-1">Customers</h2>


    </div>

    <div class="card mb-4 px-2">

        <div class="card-body">
            <% if(details !=null) { %>
                <table id="example" class="table table-bordered table-striped ">
                    <thead>
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Mobile</th>
                          <th>Status</th>
                          <th></th>


                        </tr>
                    </thead>
                  
                    <tbody>
                        <% details.forEach(function(item){ %>
                            <tr>
                              <td>
                                <%= item.fname %>
                              </td>
                              <td>
                                <%= item.email %>
                              </td>
                              <td>
                                <%= item.mobile %>
                              </td>
                              <td>
                                <% if (item.status==true) { %><%= locals.stat %><%} else { %><%= locals.unStat %><% } %>
                              </td>
                              <td>
      
                                <a href="/admin/<% if (item.status==true) { %><%= locals.blockRef %><%} else { %><%= locals.unblockRef %><% } %>/?id=<%= item._id%>" class="btn btn-dark btn-sm" onclick="return confirm('Are you sure?')">
                                  <% if (item.status==true) { %><%= locals.blocking %><%} else { %><%= locals.unBlock %><% } %>
                                </a>
                              </td>

                            </tr>
                            <% }) %>
                    </tbody>

                </table>
                <% } %>
        </div>

    </div>
    




    <script>
      $(document).ready(function () {
        var table = $('#example').DataTable({
          rowReorder: {
            selector: 'td:nth-child(2)'
          },
          responsive: true
        });
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>