<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>

<body>
    <div class="container p-5 m-5">
        <div class="row">
            <div class="col-lg-4 d-flex justify-content-center border-end">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/category">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/order">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupon">Coupons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/customer">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/admin/logout">Logout</a>
                    </li>
                </ul>
            </div>

            <div class="col-lg-8 ">

                <h3 class="fw-bold">Edit Category</h3>
                <p class="text-danger mt-0">

                </p>

                </p>
                <form action="" method="post" enctype="multipart/form-data">
                    <!-- userName -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="userName">Product Name</label>
                        <input type="text" id="userName" name="name" class="form-control" value="<%= details.name %>"
                            required />

                        <p id="nameError" class="text-danger mt-3"></p>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Model">Model</label>
                        <input type="text" id="userName" name="model" class="form-control" value="<%= details.model %>"
                            required />

                        <p id="nameError" class="text-danger mt-3"></p>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Model">Category</label>
                        <select class="form-select" name="category" aria-label="Default select example">
                            <%categories.forEach((data)=>{%>
                                <option>
                                  <%=data.name%>
                                </option>
                                <%})%>
                        </select>
                        <p id="nameError" class="text-danger mt-3"></p>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Model">Description</label>
                        <input type="text" id="userName" name="description" class="form-control"
                            value="<%= details.description %>" required />

                        <p id="nameError" class="text-danger mt-3"></p>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Model">Color</label>
                        <input type="text" id="userName" name="color" class="form-control" value="<%= details.color %>"
                            required />

                        <p id="nameError" class="text-danger mt-3"></p>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Model">Stock</label>
                        <input type="number" id="userName" name="stock" class="form-control"
                            value="<%= details.stock %>" required />

                        <p id="nameError" class="text-danger mt-3"></p>
                    </div>

                    <div class="form-outline mb-4">
                        <img class="img-thumbnail" src="/public/databaseimg/<%= details.image %>" alt="" srcset=""
                            height="200px" width="150px">

                        <input class="form-control" type="file" required name="image">
                        <label for="file-upload" accept="image/*" class="form-label">Change Image</label>

                    </div>
                    <!-- Email input -->

                    <!-- Submit button -->
                    <input type="submit" value="Update" class="btn btn-primary btn-lg btn-block mb-4 py-1" />
                </form>
            </div>
        </div>
    </div>

    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>