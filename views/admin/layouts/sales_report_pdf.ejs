<body>
    <%var totalPrice=0%>
    <% productData.forEach(function (data){%>
    <%if(productData.status !='cancelled'){%>
        <% var final = parseInt(data.finalPrice) %>
        <%totalPrice= totalPrice+ final%>
        <%}%>
        <%})%>
    
    <div class="container m-5 p-3">
        <div class="row text-center m-2">
            <h4 class="text-center">RSVP</h4>
        </div>
        <div class="row text-center m-2">
            <h5 class="text-center">Sales From <%=from %> to <%= toDate%></h5>
        </div>

        <table>
            <thead>
                <th>
                    Date
                </th>
                <th>Customer Name</th>
                <th>Product Details</th>
                <th>Coupons Used</th>
                <th>Payment Method</th>
                <th>Total Payment</th>
            </thead>
            <tbody>
                <%productData.forEach(function(item){%>
                <tr>
                    <%let date = item.date%>
                    <%let isoString = date.toISOString()%>
                    <%let newDate = isoString.split('T')[0]%>
              
                    <td><%=newDate%></td>
                    <td><%=item.customer.fname%></td>
                    <td>
                        <%for(i=0;i< item.product.length; i++ ){%>
                            <b><%=item.product[i].productId.name%></b>X
                            <b><%=item.product[i].qtyItems%></b><br>
                            <%}%>
                    </td>
                    <td><%=item.coupon%></td>
                    <td><%=item.orderType%></td>
                    <td><%=item.finalPrice%></td>
                </tr>
                <%})%>
            </tbody>
        </table>
        <center class="m-5" style="font-size: x-large;font-weight: bolder;" >Total Earning Excluding Cancellation :  â‚¹<%=totalPrice%> </center>
    </div>



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"></script>
