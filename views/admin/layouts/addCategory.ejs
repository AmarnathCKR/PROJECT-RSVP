<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>

<body>
  <div class="container p-5 m-5">
    <div class="row">
      <div class="col-lg-4 d-flex justify-content-center border-end">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/category">Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/order">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/coupon">Coupons</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/customer">Customers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger" href="/admin/logout">Logout</a>
          </li>
        </ul>
      </div>

      <div class="col-lg-8 ">

        <h3 class="fw-bold">ADD CATEGORY</h3>
        <p class="text-danger mt-0">
          <%= locals.error %>
        </p>
        <p class="text-success mt-0">
          <%= locals.message %>
        </p>
        <form action="" method="post" enctype="multipart/form-data">
          <!-- userName -->
          <div class="form-outline mb-4">

            <label class="form-label" for="userName">Name</label>
            <input type="text" id="name" name="name" class="form-control" required />
            <p id="nameError" class="text-danger mt-3"></p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <label for="file-upload" class="form-label">Images to upload</label>
            <input class="form-control" type="file" name="image" accept="image/*">

          </div>
          <p id="emailError" class="text-danger mt-3"></p>

          <!-- Password input -->

          <!-- Submit button -->
          <input type="submit" value="Upload" class="btn upload-btn btn-primary btn-lg btn-block mb-4 py-1" />
        </form>

      </div>
    </div>
  </div>

  <script>
    if (window.history.replaceState) {
      window.history.replaceState(null, null, window.location.href);
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>

</html>