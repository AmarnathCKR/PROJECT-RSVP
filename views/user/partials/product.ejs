      <script>
        var product
        console.log(product)
        function pageButton(catId) {

          $.ajax({
            url: "/check-page",
            method: "patch",
            data: { cat: catId },
            success: (res) => {
              products = res.data
              currents = res.current
              page = res.pages

              $('#product333').html('')
              // $('#1100').html('')
              $('#2200').html('')
              $('#3300').html('')
              $('#4400').html('')
              $('#5500').html('')
              $('#6600').html('')
              $('#7700').html('')
              $('#8800').html('')
              $('#9900').html('')




              products.forEach(function (items) {
                $('#product333').append(
                  '<div class="col-lg-4 d-flex justify-content-center p-4"> <div class="card justify-content-center" style="width: 100%;"> <a href="/product-page/?id=' + items._id + '" class=""><img src="' + items.image[0].url + '" class="card-img-top" alt="..."></a> <div class="card-body"> <a href="/product-page/?id=' + items._id + '" > <center id="imagePro" class="card-title" style="font-size: large; font-weight: bold;"> ' + items.name + ' </center> <center>Stock : ' + items.stock + ' </center> <center>Price : ' + items.price + ' </center> </a> </div> </div> </div>'
                );



              })


              if (page > 0) {


                if (currents == 1) {
                  $('#2200').html('<a style="color: black;">First</a>')
                } else {
                  $('#2200').html('<a style="color: black;" onclick="pageButton(1)">First</a>')
                }
                var i = (Number(currents) > 5 ? Number(currents) - 4 : 1)
                if (i !== 1) {
                  $('#4400').html('<a>...</a>')
                }
                for (i = 1; i <= (Number(currents) + 4) && i <= page; i++) {

                  if (i == currents) {
                    $('#5500').html('<a style="color: black;"> ' + i + ' </a>')
                  } else {

                    $('#6600').html('<a style="color: black;" onclick="pageButton(' + i + ')"> ' + i + ' </a>')
                  }
                  if (i == Number(currents) + 4 && i < page) {
                    $('#7700').html('<a>...</a>')
                  }
                }
                if (currents == page) {
                  $('#9900').html('<a>Last</a>')


                } else {
                  $('#9900').html('<a style="color: black;" onclick="pageButton(' + page + ')">Last</a>')
                }


              }





            }



          })
        }
      </script>

