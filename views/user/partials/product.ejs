          </section>


        </div>
        <script>
          var product
          console.log(product)
          function getCategory(catId) {

            $.ajax({
              url: "/catFilter",
              method: "patch",
              data: { cat: catId },
              success: (res) => {
                products = res.data
                $('#product333').html('');
                $('#pageloader').html('');
                $('#searchFilter').attr('value', catId)
