              <% }) %>
                <% } %>










          </div>



          <div class="col-md-12 d-flex justify-content-around" id="pageloader">

            <nav id="thePageChanger" aria-label="Page navigation example "
              class="border-dark d-flex justify-content-center">
              <% if (pages> 0) { %>
                <ul id="1100" class="pagination text-center rounded ">
                  <% if (current==1) { %>
                    <li id="2200" class="disabled p-3 btn-dark rounded"><a style="color: black;">First</a></li>
                    <% } else { %>
                      <li id="3300" class="p-3 btn-dark"><a style="color: black;" onclick="pageButton(1)">First</a>
                      </li>
                      <% } %>
                        <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %>
                          <% if (i !==1) { %>
                            <li id="4400" class="disabled p-3 btn-dark"><a style="color: black;">...</a></li>
                            <% } %>
                              <% for (; i <=(Number(current) + 4) && i <=pages; i++) { %>
                                <% if (i==current) { %>
                                  <li id="5500" class="active p-3 btn-dark"><a style="color: black;">
                                      <%= i %>
                                    </a></li>
                                  <% } else { %>


                                    <li id="6600" class="p-3 btn-dark"><a style="color: black;"
                                        onclick="pageButton('<%= i %>')">
                                        <%= i %>
                                      </a></li>

                                    <% } %>
                                      <% if (i==Number(current) + 4 && i < pages) { %>
                                        <li id="7700" class="disabled p-3 btn-dark"><a>...</a></li>
                                        <% } %>
                                          <% } %>
                                            <% if (current==pages) { %>
                                              <li id="8800" class="disabled p-3 btn-dark"><a>Last</a></li>
                                              <% } else { %>
                                                <li id="9900" class="p-3 btn-dark"><a style="color: black;"
                                                    onclick="pageButton('<%= pages %>')">Last</a></li>
                                                <% } %>
                </ul>
                <% } %>


            </nav>
          </div>


        </div>
