                products.forEach(function (items) {
                  $('#product333').append(
                    '<div class="col-lg-4 d-flex justify-content-center p-4"> <div class="card justify-content-center" style="width: 100%;"> <a href="/product-page/?id=' + items._id + '" class=""><img src="' + items.image[0].url + '" class="card-img-top" alt="..."></a> <div class="card-body"> <a href="/product-page/?id=' + items._id + '" > <center id="imagePro" class="card-title" style="font-size: large; font-weight: bold;"> ' + items.name + ' </center> <center>Stock : ' + items.stock + ' </center> <center>Price : ' + items.price + ' </center> </a> </div> </div> </div>'

                  );



