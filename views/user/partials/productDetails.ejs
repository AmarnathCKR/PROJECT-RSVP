<%- include('../layouts/header') %>
	<!-- <<<<<<<<<  Header  = (End) <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
	<!-- ==========  X Zoom  = (Start) ======================================================= -->
	<section class="xzoom_part">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="xzoom_container">
						<img src="/public/databaseimg/<%=products[0]%>" width="520" height="460" alt="" class="xzoom"
							id="xzoom-default">
						<div class="xzoom-thumbs">
							<a href="/public/databaseimg/<%=products[0]%>">
								<img src="/public/databaseimg/<%=products[0]%>" alt="" class="xzoom-gallery" width="80"
									xpreview="/public/databaseimg/<%=products[0]%>">
							</a>
							<a href="/public/databaseimg/<%=products[0]%>">
								<img src="/public/databaseimg/<%=products[0]%>" alt="" class="xzoom-gallery" width="80">
							</a>
							<a href="/public/databaseimg/<%=products[0]%>">
								<img src="/public/databaseimg/<%=products[0]%>" alt="" class="xzoom-gallery" width="80">
							</a>
						</div>
					</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="xzoom_details">
						<h4>
							<%= others.name %>
						</h4>
						<h5> Price :â‚¹<%= others.price %>
						</h5>

						<h6>
							<%= others.description %>
						</h6>

						<h6>Stock :<%= others.stock %>
						</h6>

						<div class="d-flex">
							<label for=""> Qty: </label>
							<input type="number" value="1" class="form-control">
						</div>
						<a href="/add-to-cart/?id=<%= others._id%>" class="btn"> Add To Cart </a>

						<a href="/check-out/?id=<%= others._id%>" class="btn"> Check Out </a>
						<% if (wishDetails==null) { %>
							<a class="text-dark" href="/add-wish-list/?id=<%= others._id%>"><i
									class="fa fa-heart text-grey" aria-hidden="true">
									Wishlist</i></a>
							<%}else{%>
								<a class="text-dark" href="/remove-wish-list/?id=<%= others._id%>"><i
										class="fa fa-heart text-danger" aria-hidden="true">
										Wishlist</i></a>
								<% } %>

					</div>



				</div>
			</div>
		</div>
	</section>
	<!-- ==========  X Zoom  = (End) ======================================================= -->
	<%- include('../layouts/footer') %>