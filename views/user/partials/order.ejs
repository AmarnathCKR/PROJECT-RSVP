<%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row mx-0 py-0 g-0">
            <div class="col-lg-4 mx-0 py-0 g-0 d-flex justify-content-center">
                <div class="d-flex flex-column flex-shrink-0 p-3 justify-content-center border rounded" style="width: 280px;">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <svg class="bi pe-none me-2" width="40" height="32">
                            <use xlink:href="#bootstrap"></use>
                        </svg>
                        <span class="fs-4">Account</span>
                    </a>
                    <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="/user-profile" class="nav-link link-dark" aria-current="page">
                                <svg class="bi pe-none me-2" width="16" height="16">
                                    <use xlink:href="#home"></use>
                                </svg>
                                Profile
                            </a>
                        </li>
                        <li>
                            <a href="/user-address" class="nav-link link-dark  ">
                                <svg class="bi pe-none me-2" width="16" height="16">
                                    <use xlink:href="#speedometer2"></use>
                                </svg>
                                Address
                            </a>
                        </li>
                        <li>
                            <a href="/orders" class="nav-link active">
                                <svg class="bi pe-none me-2" width="16" height="16">
                                    <use xlink:href="#table"></use>
                                </svg>
                                Orders
                            </a>
                        </li>
    
                        <li>
                            <a href="/logout" class="nav-link link-danger">
                                <svg class="bi pe-none me-2" width="16" height="16">
                                    <use xlink:href="#people-circle"></use>
                                </svg>
                                Logout
                            </a>
                        </li>
                    </ul>
                    <hr>
    
    
    
                </div>
            </div>
    


            <div class="col-lg-8 mx-0 px-0 g-0">

                <div class="row py-4 mx-0 py-0 g-0">
                    <h4>Your Orders</h4>
                </div>
                <%if(orderDetails!=null){%>


                    <div class="col-lg-12 mx-0 px-0 g-0 table-responsive">
                        <table class="table ">
                            <thead width="100%">
                                <tr width="100%">
                                    <th scope="col">Date</th>
                                    <th scope="col">Order Id</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            
                            <tbody >
                                <% orderDetails.forEach(function(items){%>

                                    <% var d = items.date %>
                                    <% d = new Date(d.getTime() - 3000000); %>
                                    <% var m = d.getFullYear().toString()+"-"+((d.getMonth()+1).toString().length==2?(d.getMonth()+1).toString():"0"+(d.getMonth()+1).toString())+"-"+(d.getDate().toString().length==2?d.getDate().toString():"0"+d.getDate().toString())+" "+(d.getHours().toString().length==2?d.getHours().toString():"0"+d.getHours().toString())+":"+((parseInt(d.getMinutes()/5)*5).toString().length==2?(parseInt(d.getMinutes()/5)*5).toString():"0"+(parseInt(d.getMinutes()/5)*5).toString())+":00" %>


                                    <tr >
                                        <td>

                                            <%= m%>
                                        </td>
                                        <td>
                                            <%=items._id%>
                                        </td>


                                        <td>
                                            <%=items.finalPrice%>
                                        </td>

                                        <td>
                                            <%=items.status%>
                                        </td>
                                        <td>
                                            <a href="/order-detail/?id=<%=items._id%>" class="btn btn-dark">View</a>
                                        </td>

                                    </tr>
                                    <%})%>

                            </tbody>
                        </table>
                    </div>

                    <%}else{%>
                        <div class="row">
                            No orders Yet
                        </div>

                        <%}%>

            </div>

        </div>

    </div>







    <%- include('../layouts/footer') %>