<%- include('../layouts/header') %>

  <div class="container-fluid">
    <% if(details !=null) { %>
      <div id="demo" class="carousel slide p-0 m-0" data-ride="carousel" data-bs-interval="3000">
        <ul class="carousel-indicators">
          <li data-target="#demo" hidden data-slide-to="0" class="active"></li>
          <% for(i=1;i<=details.length ; i++){ %>

            <li data-target="#demo" hidden data-slide-to="<%=i%>"></li>

            <% } %>
        </ul>
        <div class="carousel-inner p-0 m-0" >
          <div class="carousel-item active" >
            <div class="d-flex justify-content-center" style="width: 100%; ">
              <img class="mx-4" src="/public/databaseimg/1672385986612-handbag-61460132332.jpg" alt="slide one"width="100%" height="250px">
            </div>
           
          </div>

          <% details.forEach(function(item){ %>
            <div class="carousel-item p-0 m-o" style="align-items: center;">
              <div class="d-flex justify-content-center" style="width: 100%; ">
                <img class="mx-4" src="/public/databaseimg/<%=item.image%>" alt="" width="100%" height="250px">
              </div>
              
            </div>
            <% }) %>

        </div>
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
          <span class="carousel-control-next-icon"></span>
        </a>
      </div>
      <% } %>



  </div>

  <div class="container-fluid py-4">
    <% if(categories !=null) { %>
    
    <div class="row">
      <% categories.forEach(function(data){ %>
      
          <div class="col-lg-6 d-flex justify-content-center p-4">

            <div class="card" style="width: 100%;">
              <img src="/public/databaseimg/<%= data.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%=data.name%></h5>
                
                <a href="/shop/?id=<%= data._id%>" class="btn btn-dark">Browse</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
         
    </div>
  </div>

  <%- include('../layouts/footer') %>