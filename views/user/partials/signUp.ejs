<%- include('../layouts/header') %>


    <div class="row g-0 my-3">
        <div class="col-lg-12 d-flex justify-content-center g-0 my-3">
            <h3><%= locals.error %></h3>
        </div>

        <div class="col-lg-12 d-flex justify-content-center g-0 my-3">
            <img src="/public/img/Group (1).png" alt="" />
        </div>
    </div>


    <div class="container">
        <div class="col-lg-12 d-flex justify-content-center">
            <form action="" method="post" class="justify-content-center">
                <div class="mb-3 ">
                    <label class="form-label" for="exampleCheck1">Full Name</label>
                    <input type="text" name="fname" class="form-control" id="exampleInputEmail1" />
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input pattern="^(([-\w\d]+)(\.[-\w\d]+)*@([-\w\d]+)(\.[-\w\d]+)*(\.([a-zA-Z]{2,5}|[\d]{1,3})){1,2})$" name="email" class="form-control" id="email" aria-describedby="emailHelp" required/>

                </div>

                <div class="mb-3 ">
                    <label class="form-label" for="exampleCheck1">Mobile Number</label>
                    <input pattern="^[0-9]{10}$" name="mobile" class="form-control" id="mobileNumber" required/>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="exampleCheck1">Password</label>
                    <input type="password" pattern=".*\d).{8,}$" name="password" class="form-control" id="password" required/>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark m-1">Sign Up</button><br />
                </div>
            </form>
        </div>
    </div>




    <%- include('../layouts/footer') %>